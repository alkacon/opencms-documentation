{
  "version": "1.0.0",
  "name": "opencms-mercury-template",
  "description": "The Mercury template for OpenCms.",
  "author": "Alkacon Software GmbH & Co. KG - http://www.alkacon.com",
  "license": "AGPL-3.0",
  "repository": "opencms-mercury-template",
  "private": true,
  "devDependencies": {
    "autoprefixer": "^9.4.10",
    "copyfiles": "^2.1.0",
    "clean-css": "^4.2.1",
    "clean-css-cli": "^4.2.1",
    "del-cli": "^1.1.0",
    "event-target-shim": "^5.0.1",
    "expose-loader": "^0.7.5",
    "glob": "^7.1.3",
    "imports-loader": "^0.8.0",
    "minimist": "^1.2.0",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.10",
    "npm-run-all": "^4.1.5",
    "popper.js": "^1.14.7",
    "postcss": "^7.0.14",
    "postcss-cli": "^6.1.2",
    "postcss-urlrewrite": "^0.2.2",
    "script-loader": "^0.7.2",
    "stylefmt": "^6.0.3",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.2.3"
  },
  "dependencies": {
    "bootstrap": "4.3.1",
    "current-device": "0.8.0",
    "fitvids": "2.0.0",
    "jquery": "3.3.1",
    "js-cookie": "2.2.0",
    "lazysizes": "5.2.2",
    "mapbox-gl": "0.53.1",
    "masonry-layout": "4.2.2",
    "mdn-polyfills": "5.16.0",
    "photoswipe": "4.1.3",
    "promise-polyfill": "8.1.0",
    "shariff": "3.1.1",
    "slick-carousel": "1.8.1"
  },
  "scripts": {
    "css": "npm-run-all css-clean css-sass css-postcss css-minify css-deploy",
    "css-clean": "del-cli build/npm/01_processed/* build/npm/02_postcssed/* build/npm/03_minified/*",
    "css-sass": "node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 --output-style compact template-src/scss/themes --output build/npm/01_processed",
    "css-postcss": "postcss --config postcss.config.js build/npm/01_processed/*.css --dir build/npm/02_postcssed",
    "css-minify": "node ./npmtasks.js --cleancss --inputFiles 'build/npm/02_postcssed/*.css' --outputDir build/npm/03_minified",
    "css-deploy": "copyfiles -f build/npm/03_minified/* ${OCMOUNT}/system/modules/com.alkacon.opencms.documentation/resources/css/",
    "grunt": "grunt --mapscss",
    "dist": "npm-run-all css js",
    "js": "npm-run-all js-clean js-compile js-deploy",
    "js-clean": "del-cli build/npm/js/*",
    "js-compile": "webpack --config webpack.config.js",
    "js-deploy": "copyfiles -f build/npm/js/* ${OCMOUNT}/system/modules/alkacon.mercury.theme/js/",
    "js-stats": "webpack --json > mercury-stats.json",
    "watch": "npm-run-all --parallel watch-*",
    "watch-css": "nodemon --watch template-src --ext scss --exec \"npm run css\"",
    "watch-dev": "nodemon --watch template-src --ext scss --exec \"npm run css-dev\"",
    "watch-js": "nodemon --watch template-src/js --ext js --exec \"npm run js\"",
    "css-nl": "node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 --output-style compact --include-path template-src alkacon.mercury.newsletter/template-src/scss --output build/npm/01_processed"
  }
}
